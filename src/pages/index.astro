---
import Layout from '../layouts/Layout.astro'
---

<Layout title='Welcome to Astro.'>
  <main
    class='flex flex-col relative items-center max-w-7xl 2xl:max-w-none min-h-screen mx-auto w-full gap-28 text-center'
  >
    <div class='flex flex-col gap-8'>
      <div class='flex flex-col gap-4'>
        <h1 class='font-semibold text-8xl leading-14'>
          Significantly <br /> improve sales
        </h1>
        <span class='text-xl text-black/60'
          >We guarantee you revenue growth within a month.</span
        >
      </div>

      <div class='flex gap-3 justify-center'>
        <a
          class='px-12 py-3 bg-black text-white font-semibold rounded-xl'
          href=''>Start free trial</a
        >
        <a
          class='px-12 py-3 border-2 border-black font-semibold rounded-xl'
          href=''>Book a demo</a
        >
      </div>
    </div>

    <>
      <img
        src='web.png'
        alt=''
        class='w-8/12 object-fill max-h-full h-full rounded-t-3xl'
      />
    </>

    <div class='box'></div>
  </main>
</Layout>

<style>
  img {
    background-image: linear-gradient(
      02.4deg,
      rgba(233, 186, 251, 0.5) 20.8%,
      rgba(153, 129, 238, 1) 100.3%
    );
    border-top: 3px solid transparent;
  }
  .box {
    position: absolute;
    z-index: -1;
    width: 100vw;
    border-radius: 25% 35% 0 0;
    opacity: 0.5;
    height: 56%;
    filter: blur(100px) saturate(3.5) brightness(0.8);
    bottom: 0%;
    background-image: linear-gradient(
      58.2deg,
      rgba(243, 220, 237, 0.87) -55%,
      rgba(171, 53, 163, 0.45) 49.3%,
      rgba(255, 205, 112, 0.783) 97.7%
    );

    animation: rotateGradient 15s ease-in-out alternate infinite;
  }

  @keyframes rotateGradient {
    0% {
      height: 50%;
      border-radius: 100% 35% 0 0;
      filter: blur(100px) saturate(3.5) brightness(0.8);
    }
    50% {
      height: 60%;
      filter: blur(100px) saturate(15.5) brightness(1.8);
    }
    100% {
      height: 35%;
      border-radius: 25% 100% 0 0;
    }
  }
</style>
